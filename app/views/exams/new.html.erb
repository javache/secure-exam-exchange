<h2>Create new exam</h2>

<%= form_for @exam do |f| %>
  <fieldset>
    <p><%= f.label :name %>
    <%= f.text_field :name %></p>

    <p><%= f.label :start_time %>
    <%= f.datetime_select :start_time %></p>
    <p><%= f.label :end_time %>
    <%= f.datetime_select :end_time %></p>

    <p><%= f.label :locked %>
    <%= f.check_box :locked %></p>

    <p><%= f.label :data %>
    <%= f.file_field :data %></p>

    <p><%= f.label :participants %>
    <% @users.each do |u| %>
      <%= label_tag "user[#{u.id}]", u.name %>
      <%= check_box_tag "user[#{u.id}]", true, true %><br />
    <% end %></p>

    <p><%= f.submit %></p>
  <fieldset>
<% end %>
